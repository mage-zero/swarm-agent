{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Swarm Agent Changelog",
  "type": "object",
  "required": ["versions"],
  "additionalProperties": false,
  "properties": {
    "versions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["version", "date", "summary", "requires", "changes"],
        "additionalProperties": false,
        "properties": {
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Semver version (no v prefix)"
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "ISO date of release"
          },
          "summary": {
            "type": "string",
            "minLength": 1,
            "description": "Human-readable summary for customer display"
          },
          "requires": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "cloud-swarm": {
                "type": "string",
                "description": "Semver constraint for cloud-swarm"
              },
              "mz-control": {
                "type": "string",
                "description": "Semver constraint for mz-control"
              }
            }
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "description", "phase", "downtimeMinutes", "scope"],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
                  "description": "Stable kebab-case identifier, unique within version"
                },
                "description": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Human-readable description of the change"
                },
                "phase": {
                  "type": "string",
                  "enum": ["pre_migrate", "migrate", "post_migrate"],
                  "description": "pre_migrate (additive, no downtime) / migrate (causes downtime) / post_migrate (cleanup)"
                },
                "downtimeMinutes": {
                  "type": "number",
                  "minimum": 0,
                  "description": "Expected downtime in minutes (0 = no downtime)"
                },
                "scope": {
                  "type": "string",
                  "enum": ["stack", "environment"],
                  "description": "stack (once per cluster) / environment (per env)"
                }
              }
            }
          }
        }
      }
    }
  }
}
